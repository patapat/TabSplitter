<div class="backdrop">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <ul>
        <li><%= error %></li>
      </ul>
    <% end %>
  <% end %>
  <div id="headerwrap">
    <div class="container" id="splash-signup">
      <div class="row">
        <div class="col-lg-6">
          <h1 id="splash-message">Track tabs amongst friends<br/>
          because frankly we're all a bit too lazy.</h1>
          <form role="form" id="login-form" autocomplete="off" action="<%= users_url %>" method="post">
            <div class="form-group">
              <input
                type="hidden"
                name="authenticity_token"
                value="<%= form_authenticity_token %>">

              <label for="user_email" class="sr-only">Email</label>
              <input type="email" name="user[email]" id="user_email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="user_password" class="sr-only">Password</label>
              <input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
            </div>
            <button style="width:50%; margin-left:25%;" class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
          </form>
        </div><!-- /col-lg-6 -->
        <div class="col-lg-6">
          <img class="img-responsive" src="http://www.blacktie.co/demo/flatty/assets/img/ser03.png" alt="">
        </div><!-- /col-lg-6 -->

      </div><!-- /row -->
    </div><!-- /container -->
  </div><!-- /headerwrap -->
</div>
