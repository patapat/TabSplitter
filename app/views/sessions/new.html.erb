<div class="backdrop">
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <ul>
        <li><%= error %></li>
      </ul>
    <% end %>
  <% end %>

  <section id="login">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-wrap">
            <h1>splitsies</h1>
            <form role="form" id="login-form" autocomplete="off" action="<%= session_url %>" method="post">
              <div class="form-group">
                <input
                  type="hidden"
                  name="authenticity_token"
                  value="<%= form_authenticity_token %>">

                <label for="user_email" class="sr-only">Email</label>
                <input type="text" name="user[email]" id="user_email" class="form-control" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="user_password" class="sr-only">Password</label>
                <input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
              </div>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
            </form>
            <a href="javascript:;" class="forget" data-toggle="modal" data-target=".forget-modal">Forgot your password?</a>
            <hr>
          </div>
        </div> <!-- /.col-xs-12 -->
      </div> <!-- /.row -->
    </div> <!-- /.container -->
  </section>
</div>
