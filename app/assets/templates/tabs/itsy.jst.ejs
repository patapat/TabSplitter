<% var email = CURRENT_USER.email %>
<% var url = "https://secure.gravatar.com/avatar/" + md5(email) %>

<h1 class="page-header">Itsy Splitsy</h1>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-sm-4">
      <form class="form-horizontal itsy-form" role="form">
        <fieldset>
          <br>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="tab_title">For</label>
            <div class="col-sm-10">
              <input type="text" name="tab[title]" id="tab_title" value="<%= tab.escape('title') %>" class="form-control" placeholder="Description">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="tab_total_amount">Total</label>
            <div class="col-sm-4">
              <input type="text" name="tab[total_amount]" placeholder="Total" id="tab_total_amount" class="form-control" value="<%=tab.escape('total_amount') %>">
            </div>
            <label class="col-sm-1 control-label" for="tab_date">Date</label>
            <div class="col-sm-5">
              <input type="date" name="tab[date]" class="form-control" id="tab_date" value="<%= tab.id ? tab.escape('date') : currentDate %>">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="tab_title">Owers</label>
            <div class="col-sm-10">
              <input type="text" id="tab-ower-field" class="form-control" placeholder="Search friends...">
              <div id="tab-friends"></div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 even-ower">
              
            </div>
            <div class="col-sm-2 amount-each">
              <h4>Amount</h4>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <button type="submit" class="btn btn-primary">Split it!</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
    </div>

    <div class="col-sm-1"></div>

    <div class="col-sm-3">
      <br>

      <div class="search"></div>

    </div>
  </div>
</div>
